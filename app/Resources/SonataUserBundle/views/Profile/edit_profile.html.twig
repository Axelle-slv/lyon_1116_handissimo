{% extends "@SonataUser/layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/editProfile.css') }}">
{% endblock %}

{% block fos_user_content %}
    {# Header Block #}
    <div class="head-block"></div>

    <div class="main-block container">
        {% block sonata_profile_title %}
            <h1 class="title">{{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}</h1>
        {% endblock %}

        {% block sonata_profile_content %}

            {{ form_errors(form) }}

            {% form_theme form _self %}

            <div class="panel panel-info panel-custom">
                <div class="panel-heading">
                    <i class="fa fa-address-card blue" aria-hidden="true"></i>
                    <h2 class="panel-title blue">{{ "title_user_account" | trans({}, 'SonataUserBundle')}}</h2>
                </div>
                <div class="col-md-6 col-md-offset-3 form-container">
                    <div class="panel-body">
                        <div class="col-xs-10 col-xs-offset-1">
                            {% include "SonataUserBundle:Profile:edit_profile_content.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>
            {% render url("sonata_user_profile_edit_authentication") %}
        </div>
    {% endblock %}
{% endblock fos_user_content %}