{% extends 'base.html.twig' %}

{% block body %}
    <h1>Needs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Needname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for need in needs %}
            <tr>
                <td><a href="{{ path('needs_show', { 'id': need.id }) }}">{{ need.id }}</a></td>
                <td>{{ need.needName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('needs_show', { 'id': need.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('needs_edit', { 'id': need.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('needs_new') }}">Create a new need</a>
        </li>
    </ul>
{% endblock %}
