{% extends 'base.html.twig' %}

{% block body %}
    <h1>Societies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Societyname</th>
                <th>Logo</th>
                <th>Address</th>
                <th>Postal</th>
                <th>City</th>
                <th>Phonenumber</th>
                <th>Mail</th>
                <th>Societytwitter</th>
                <th>Societyfacebook</th>
                <th>Website</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for society in societies %}
        {% if society.userSociety.id == app.security.getToken().getUser().getId()  %}

        <tr>
                <td><a href="{{ path('society_show', { 'id': society.id }) }}">{{ society.id }}</a></td>
                <td>{{ society.societyName }}</td>
                <td>{{ society.logo }}</td>
                <td>{{ society.address }}</td>
                <td>{{ society.postal }}</td>
                <td>{{ society.city }}</td>
                <td>{{ society.phoneNumber }}</td>
                <td>{{ society.mail }}</td>
                <td>{{ society.societyTwitter }}</td>
                <td>{{ society.societyFacebook }}</td>
                <td>{{ society.website }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('society_show', { 'id': society.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('society_edit', { 'id': society.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <h2>Liste de vos sociétés</h2>

    <ul>
        {% for org in orgs %}
             {% if org.id != app.request.get('id') %}
                 <li><a href="{{ path('organizations_edit', { 'id': org.id}) }}">{{ org.name }}</a></li>
             {% endif %}
        {% endfor %}
    </ul>


    <ul>
        <li>
            <a href="{{ path('society_new') }}">Create a new society</a>
        </li>
    </ul>
{% endblock %}
