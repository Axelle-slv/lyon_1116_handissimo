{% extends 'base.html.twig' %}

{% block body %}
    <h1>Society</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ society.id }}</td>
            </tr>
            <tr>
                <th>Societyname</th>
                <td>{{ society.societyName }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ society.logo }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ society.address }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ society.postal }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ society.city }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ society.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ society.mail }}</td>
            </tr>
            <tr>
                <th>Societytwitter</th>
                <td>{{ society.societyTwitter }}</td>
            </tr>
            <tr>
                <th>Societyfacebook</th>
                <td>{{ society.societyFacebook }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ society.website }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('society_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('society_edit', { 'id': society.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
